<Window x:Class="SnakeGame.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SnakeGame"
        mc:Ignorable="d"
        Title="MainWindow" Height="500" Width="500">
    <Grid>
        <Canvas Name="GameCanvas" Background="DimGray" Height="400" Width="400" KeyDown="Window_KeyDown" Focusable="True"/>
        <TextBlock Name="ScoreBoard" Text="Score: 0" Foreground="Black" Height="30" Width="80" HorizontalAlignment="Left" VerticalAlignment="Top" FontSize="20"/>
    </Grid>
</Window>
